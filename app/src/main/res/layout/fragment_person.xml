<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="408dp"
            android:layout_height="95dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adult"
                android:layout_width="250dp"
                android:layout_height="95dp"
                android:background="@drawable/round_corner"
                android:gravity="top|left|center_vertical|fill_vertical"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="성인\n 만 13세 이상"
                android:textSize="22sp" />

            <Button
                android:id="@+id/adult_min"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:text="-" />

            <TextView
                android:id="@+id/adult_count"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/adult_plus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="408dp"
            android:layout_height="93dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/child"
                android:layout_width="250dp"
                android:layout_height="95dp"
                android:background="@drawable/round_corner"
                android:gravity="top|left|center_vertical|fill_vertical"
                android:padding="10dp"
                android:text="어린이\n 2~12세"
                android:textSize="22sp" />

            <Button
                android:id="@+id/child_min"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:text="-" />

            <TextView
                android:id="@+id/child_count"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/child_plus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/baby"
                android:layout_width="250dp"
                android:layout_height="95dp"
                android:background="@drawable/round_corner"
                android:gravity="top|left|center_vertical|fill_vertical"
                android:padding="10dp"
                android:text="유아\n 2세미만"
                android:textSize="22sp" />

            <Button
                android:id="@+id/baby_min"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:text="-" />

            <TextView
                android:id="@+id/baby_count"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/baby_plus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_button"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="완료"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>